# ==========================================
# BACKEND .env FILE
# Copy to: backend/.env
# ==========================================

# ✅ Database Configuration
# Get from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/parkease?retryWrites=true&w=majority

# ✅ Server Configuration
NODE_ENV=production
PORT=5000

# ✅ JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_random_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=7d

# ✅ Frontend URL for CORS
CLIENT_URL=https://parkease-frontend.vercel.app

# ✅ Razorpay Configuration
# Get from: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=rzp_test_ILzaLVLAtji6G9
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# ✅ Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ✅ Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ✅ Logging
LOG_LEVEL=info
